<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸŒ INTERNET - Required for API calls in background -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- ðŸ“ LOCATION - Required for background location tracking -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <!-- ðŸ”” FOREGROUND SERVICE - Required to keep service running -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>

    <!-- ðŸ”‹ WAKE LOCK - Required to prevent system from killing service -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- ðŸ“¡ NETWORK STATE - Monitor network connectivity -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- ðŸŽ¯ QUERY PACKAGE - Allow opening external apps like Maps -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>

    <!-- ðŸ”Œ CHANGE NETWORK STATE - For network connectivity checks -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <application
        android:name="${applicationName}"
        android:label="restro_deliveryapp"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true">

        <!-- Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAP_KEY"/>

        <!-- MAIN ACTIVITY - Does NOT cancel background services when opened from intent -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- âœ… FOREGROUND SERVICE - Location tracking service (survives app background) -->
        <service
            android:name="com.pravera.flutter_foreground_task.service.ForegroundService"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2"/>
    </application>

</manifest>